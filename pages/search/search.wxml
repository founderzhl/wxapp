<view class="search-bar">
<form class="search-bar-form" bindsubmit="formSubmit" bindreset="formReset">
  <view class="search-bar-box">
    <button class="search-btn" formType="submit">
      <icon type="search" size="18" color="#B2B2B2"/>
    </button>    
    <input name="q" placeholder="请输入检索词" bindinput="bindfocus" />
    <!--<view class="icon-clear"></view>-->
  </view>
</form>
</view>
<view class="search-result">
  <scroll-view class="scroll-view" scroll-y="true" style="width: 100%">
    <view class="paper-item" wx:for="{{paperList}}" wx:for-index="idx" wx:for-item="item">
      <view class="paper-title">{{idx}}: {{item.Title[0]}}</view>
      <view class="paper-abstract">{{item.Abstract[0]}}</view>
      <view class="paper-keyword" wx:for="{{item.Keyword_Machine}}" wx:for-item="keyword">
        {{keyword}}
      </view>      
    </view>
  </scroll-view>
</view>